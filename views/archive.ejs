<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="./assets/favicon.ico">
    <title>archive - plant with us</title>
    <link rel="stylesheet" href="./styles/style.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&family=Quicksand:wght@300..700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <section id="header">
      <a href="/"><img src="./assets/plantwithus.png" alt="logo plant with us" /></a>

      <div>
        <ul id="navbar">
          <li><a href="/">explore</a></li>
          <li><a href="/create">create</a></li>
          <li><a href="/history">history</a></li>
          <li><a class="active" href="/archive">archive</a></li>
          <a href="#" id="close"><img src="./assets/x.png" alt="" /></a>
        </ul>
      </div>

      <div id="mobile">
        <i id="bar"><img src="./assets/list.png" alt="" /></i>
      </div>
    </section>

    <div class="card-archive">
      <% archives.forEach(event => { %>
        <div class="card-content">
          <div>
            <img src="./uploads/<%= event.thumbnail_photo %>" alt="<%= event.name %>" />
          </div>
          <div class="money-style">
            <p><%= event.name %></p>
            <p>IDR<%= event.raised_money ? event.raised_money.toLocaleString() : "0" %></p>
          </div>
        </div>
      <% }) %>
    </div>    

    <footer>
      <a href="/"><img src="./assets/plantwithus.png" alt="logo plant with us" /></a>
      <a href="/create">create</a>
      <a href="/history">history</a>
      <a href="/archive">archive</a>
  </footer>

    <div class="footer-plus">
        <a href="">privacy policy</a>
        <p>plant with us</p>
    </div>

    <script src="./js/script.js"></script>
  </body>
</html>
