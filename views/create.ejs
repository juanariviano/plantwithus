    <form action="/create" method="POST" enctype="multipart/form-data">
      <div class="form">
        <div class="form-style">
          <input type="text" name="firstname" placeholder="first name" required />
          <input type="text" name="lastname" placeholder="last name" required />
        </div>

        <div class="form-style">
          <input type="email" name="email" placeholder="email" required />
          <input
            type="number"
            name="targetmoney"
            placeholder="target money in rupiah"
            required
          />
        </div>

        <div class="upload-file">
          <label for="file" class="file-style">attach files</label>
          <label for="" class="label2">attach your proposal in pdf format</label>
          <input type="file" name="file" id="file" required />
        </div>

        <div class="form-style-2">
          <textarea name="additionalnotes" placeholder="additional notes"></textarea>
        </div>

        <button type="submit">submit</button>
      </div>
    </form>

    
